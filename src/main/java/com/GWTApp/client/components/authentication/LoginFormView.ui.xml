<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:m='urn:import:gwt.material.design.client.ui'>

    <g:VerticalPanel ui:field="mainPanel">

        <g:Label text="Authentication"/>
        <g:Label text="Login"/>
        <g:TextBox ui:field='loginTextBox' title="Login"/>
        <g:Label text="Password"/>
        <g:PasswordTextBox ui:field="passwordTextBox" title="Password"/>
        <g:HorizontalPanel>
            <g:Button ui:field="loginBtn" text="submit"/>
            <g:Button ui:field="registerBtn" text="Sign up"/>
        </g:HorizontalPanel>






    </g:VerticalPanel>
</ui:UiBinder>